@using TS4.Areas.Identity.Data
@model List<User>
@{
    ViewData["Title"] = "Index";
}

@using (Html.BeginForm("Save", "User", FormMethod.Post))
{
    <table class="table tan=ble-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Login
                </th>
                <th>
                    isBlocked
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td width="50%">
                        @Html.DisplayFor(m => m[i].Login)
                        @Html.HiddenFor(m => m[i].Id)
                    </td>
                    <td width="50%">
                        @Html.CheckBoxFor(m => m[i].Status)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <input type="submit" value="Save" />
}

